<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base de la aplicación -->
    <style name="Theme.RitsuAI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Colores de acento -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnAccent">@color/black</item>
        
        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Colores de estado -->
        <item name="colorError">@color/error_border</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Estilo de la barra de estado -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Estilo de la barra de navegación -->
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Estilo de la ventana -->
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
    
    <!-- Estilo para botones principales -->
    <style name="Widget.RitsuAI.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Estilo para botones secundarios -->
    <style name="Widget.RitsuAI.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/secondary</item>
        <item name="strokeColor">@color/secondary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Estilo para botones de acento -->
    <style name="Widget.RitsuAI.Button.Accent" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Estilo para tarjetas -->
    <style name="Widget.RitsuAI.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>
    
    <!-- Estilo para campos de texto -->
    <style name="Widget.RitsuAI.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="hintTextColor">@color/secondary</item>
    </style>
    
    <!-- Estilo para texto de título -->
    <style name="TextAppearance.RitsuAI.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Estilo para texto de subtítulo -->
    <style name="TextAppearance.RitsuAI.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Estilo para texto de cuerpo -->
    <style name="TextAppearance.RitsuAI.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Estilo para texto de cuerpo secundario -->
    <style name="TextAppearance.RitsuAI.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Estilo para texto de estado -->
    <style name="TextAppearance.RitsuAI.Status" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Estilo para texto de estado activo -->
    <style name="TextAppearance.RitsuAI.Status.Active">
        <item name="android:textColor">@color/status_active</item>
    </style>
    
    <!-- Estilo para texto de estado inactivo -->
    <style name="TextAppearance.RitsuAI.Status.Inactive">
        <item name="android:textColor">@color/status_inactive</item>
    </style>
    
    <!-- Estilo para texto de estado pendiente -->
    <style name="TextAppearance.RitsuAI.Status.Pending">
        <item name="android:textColor">@color/status_pending</item>
    </style>
    
    <!-- Estilo para texto de estado de error -->
    <style name="TextAppearance.RitsuAI.Status.Error">
        <item name="android:textColor">@color/status_error</item>
    </style>
    
    <!-- Estilo para iconos -->
    <style name="Widget.RitsuAI.Icon" parent="Widget.Material3.Icon">
        <item name="android:tint">@color/icon_primary</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    
    <!-- Estilo para iconos secundarios -->
    <style name="Widget.RitsuAI.Icon.Secondary">
        <item name="android:tint">@color/icon_secondary</item>
    </style>
    
    <!-- Estilo para iconos de estado -->
    <style name="Widget.RitsuAI.Icon.Status">
        <item name="android:tint">@color/icon_secondary</item>
    </style>
    
    <!-- Estilo para divisores -->
    <style name="Widget.RitsuAI.Divider" parent="Widget.Material3.Divider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_height">1dp</item>
    </style>
    
    <!-- Estilo para sombras -->
    <style name="Widget.RitsuAI.Shadow">
        <item name="android:elevation">8dp</item>
        <item name="android:translationZ">8dp</item>
    </style>
    
    <!-- Estilo para animaciones -->
    <style name="Animation.RitsuAI">
        <item name="android:windowAnimationStyle">@style/Animation.RitsuAI.Window</item>
    </style>
    
    <!-- Estilo para animaciones de ventana -->
    <style name="Animation.RitsuAI.Window">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
    <!-- Estilo para diálogos -->
    <style name="Theme.RitsuAI.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@color/card_background</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowCornerRadius">16dp</item>
    </style>
    
    <!-- Estilo para barras de progreso -->
    <style name="Widget.RitsuAI.ProgressBar" parent="Widget.Material3.ProgressBar.Linear">
        <item name="android:progressTint">@color/primary</item>
        <item name="android:progressBackgroundTint">@color/divider_light</item>
    </style>
    
    <!-- Estilo para switches -->
    <style name="Widget.RitsuAI.Switch" parent="Widget.Material3.Switch">
        <item name="android:thumbTint">@color/white</item>
        <item name="android:trackTint">@color/primary</item>
    </style>
    
    <!-- Estilo para chips -->
    <style name="Widget.RitsuAI.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
    
    <!-- Estilo para barras de herramientas -->
    <style name="Widget.RitsuAI.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/transparent</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
    </style>
    
    <!-- Estilo para barras de navegación -->
    <style name="Widget.RitsuAI.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/card_background</item>
        <item name="itemIconTint">@color/icon_primary</item>
        <item name="itemTextColor">@color/text_primary</item>
    </style>
    
    <!-- Estilo para listas -->
    <style name="Widget.RitsuAI.ListView" parent="Widget.Material3.ListView">
        <item name="android:background">@color/transparent</item>
        <item name="android:divider">@color/divider_light</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    
    <!-- Estilo para elementos de lista -->
    <style name="Widget.RitsuAI.ListItem" parent="Widget.Material3.ListItem">
        <item name="android:background">@color/card_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
</resources>