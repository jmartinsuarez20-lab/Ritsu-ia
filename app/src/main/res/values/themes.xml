<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.RitsuAI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Success colors -->
        <item name="colorSuccess">@color/success</item>
        <item name="colorOnSuccess">@color/white</item>
        
        <!-- Warning colors -->
        <item name="colorWarning">@color/warning</item>
        <item name="colorOnWarning">@color/white</item>
        
        <!-- Info colors -->
        <item name="colorInfo">@color/info</item>
        <item name="colorOnInfo">@color/white</item>
        
        <!-- Shape styles -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.RitsuAI.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.RitsuAI.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.RitsuAI.LargeComponent</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.RitsuAI.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.RitsuAI.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.RitsuAI.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.RitsuAI.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.RitsuAI.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.RitsuAI.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.RitsuAI.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.RitsuAI.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.RitsuAI.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.RitsuAI.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.RitsuAI.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.RitsuAI.LabelSmall</item>
        
        <!-- Window animations -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        
        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/ripple</item>
    </style>
    
    <!-- Special mode theme -->
    <style name="Theme.RitsuAI.SpecialMode" parent="Theme.RitsuAI">
        <item name="colorPrimary">@color/special_mode_primary</item>
        <item name="colorPrimaryVariant">@color/special_mode_primary_dark</item>
        <item name="colorSecondary">@color/special_mode_secondary</item>
        <item name="colorSecondaryVariant">@color/special_mode_secondary_dark</item>
        <item name="android:statusBarColor">@color/special_mode_primary</item>
        <item name="android:navigationBarColor">@color/special_mode_primary</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.RitsuAI.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.RitsuAI.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.RitsuAI.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Typography Styles -->
    <style name="TextAppearance.RitsuAI.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.RitsuAI.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.RitsuAI.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.RitsuAI.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.RitsuAI.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.RitsuAI.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.RitsuAI.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.RitsuAI.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.RitsuAI.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.RitsuAI.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.RitsuAI.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.RitsuAI.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>
    
    <!-- Window Animation -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.RitsuAI.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.RitsuAI.LabelLarge</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="Widget.RitsuAI.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.RitsuAI.LabelLarge</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.RitsuAI.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Input Styles -->
    <style name="Widget.RitsuAI.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    
    <!-- Progress Styles -->
    <style name="Widget.RitsuAI.ProgressBar" parent="Widget.Material3.ProgressBar.Linear">
        <item name="android:progressTint">@color/primary</item>
        <item name="android:progressBackgroundTint">@color/surface_variant</item>
    </style>
    
    <!-- Switch Styles -->
    <style name="Widget.RitsuAI.Switch" parent="Widget.Material3.Switch">
        <item name="thumbTint">@color/primary</item>
        <item name="trackTint">@color/surface_variant</item>
    </style>
    
    <!-- Chip Styles -->
    <style name="Widget.RitsuAI.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
    
    <!-- Avatar Styles -->
    <style name="Widget.RitsuAI.Avatar" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/primary_container</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
    </style>
    
    <!-- Status Styles -->
    <style name="Widget.RitsuAI.StatusCard" parent="Widget.RitsuAI.Card">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    
    <!-- Special Mode Styles -->
    <style name="Widget.RitsuAI.SpecialMode.Card" parent="Widget.RitsuAI.Card">
        <item name="cardBackgroundColor">@color/special_mode_surface</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
    
    <style name="Widget.RitsuAI.SpecialMode.Button" parent="Widget.RitsuAI.Button">
        <item name="backgroundTint">@color/special_mode_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>